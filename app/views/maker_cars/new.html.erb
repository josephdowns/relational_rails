<h1>Enter a new car</h1>

<%= form_with url: "/makers/#{@maker.id}/cars", method: :post, local: true do |f| %>
  <%= f.label "Enter the name of the car" %>
  <%= f.text_field :name %><br><br>
  <%= f.label "Enter the color of the car" %>
  <%= f.text_field :color %><br><br>
  <%= f.label "Enter the number of doors" %>
  <%= f.number_field :doors %><br><br>
  <%= f.label "In production? True/False" %>
  <%= f.text_field :in_production %><br><br>
  <%= f.submit "Create Car" %>
<% end %>
